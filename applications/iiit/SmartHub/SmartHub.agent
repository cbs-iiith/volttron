{
    "exec":"smarthub-0.4-py2.7.egg --config \"%c\"--sub\"%s\"--pub \"%p\"",
    "agentid": "SmartHub",
    "message": "iSPACE - SmartHub Agent",
    "period_read_data": 30,
    "period_process_pp": 10,
    "topic_root": 'smarthub',
    "topic_price_point": "smarthub/pricepoint",
    "topic_energy_demand": "ds/energydemand",
    "vb_vip_identity": "iiit.volttronbridge",
    
    "default_base_price": 0.1,
    "price_point_latest": 0.2,
    
    #price functions(pf), quadratic functions of the form f(x) = ax2 + bx + c, 
    #             where a,b,c are coefficients of the quadratic function,
    #                   f(x) --> setpoint,
    #                   x --> price point,
    #                   pf_roundup --> roundup, and 
    #                   pf_idx --> default pf_coefficients
    "pf_sh_fan": {
        "roundup": 10,
        "idx": 0,
        "coefficients": [
            {"a": 70, "b": 5, "c": 20},
            {"a": 60, "b": 10, "c": 30},
            {"a": 35, "b": 29.75, "c": 40}
        ]
    },

    # gradient descent params to compute new pp from a budget
    "gd_params": {
        "max_iterations": 1000,
        "epsilon": 5,
        "gamma": {
            "fan": 0.1786,
            "light": 0.1429
        },
        "weight_factors": {
            "fan": 0.5,
            "light": 0.5
        }
    }

}
